<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="211dp"
        android:layout_height="32dp"
        android:text="Choose Account Type"
        android:textColor="#38b5ed"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.055" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="47dp"
        tools:layout_editor_absoluteY="107dp"
        tools:srcCompat="@tools:sample/avatars[8]" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="227dp"
        tools:layout_editor_absoluteY="104dp"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/button1"
        android:layout_width="108dp"
        android:layout_height="53dp"
        android:backgroundTint="#38b5ed"
        android:onClick="login"
        android:text="Login"
        tools:layout_editor_absoluteX="247dp"
        tools:layout_editor_absoluteY="568dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No account"
        tools:layout_editor_absoluteX="49dp"
        tools:layout_editor_absoluteY="588dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello Doctor"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="319dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="65dp"
        android:layout_height="27dp"
        android:autoLink="all"
        android:clickable="true"
        android:text="SingUp"
        android:textColor="#38b5ed"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="139dp"
        tools:layout_editor_absoluteY="585dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please fill out form below to get started"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="351dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="308dp"
        android:layout_height="51dp"
        android:background="@drawable/my_border"
        android:gravity="center"
        android:hint="Password"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="47dp"
        tools:layout_editor_absoluteY="492dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="308dp"
        android:layout_height="54dp"
        android:autoText="false"
        android:background="@drawable/my_border"
        android:gravity="center"
        android:hint="Username"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="413dp" />


</androidx.constraintlayout.widget.ConstraintLayout>